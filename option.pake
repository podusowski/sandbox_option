configuration __default compiler_flags(-std=c++14)

target application example \
    sources(example.cpp) \
    run_after("${__build}/example") \
    include_dirs(.)

target application tests \
    sources(tests.cpp) \
    run_after("${__build}/tests") \
    include_dirs(. $gtest.__path) \
    link_with(gtest pthread) \
    depends_on(gtest)
